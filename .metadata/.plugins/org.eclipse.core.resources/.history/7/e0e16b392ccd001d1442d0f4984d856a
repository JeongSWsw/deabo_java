//*
package ex01.operator;

public class MainEntry {

	// 최단산쉬관논삼대콤
	public static void main(String[] args) {
		//최우선 연산자 (), [], .
		
		//단항 연산자 : 증감 연산자 -> ++, --, ~
		
		int x = 10, y;
		// 10 == 01010
		// ~10 == 0101
		
		y = ~x; // 비트 부정 : -(원래값 + 1) ==> 출력 결과
		
		System.out.println("x = "+x+"\ty = "+y);
		
	}
}
//*/

