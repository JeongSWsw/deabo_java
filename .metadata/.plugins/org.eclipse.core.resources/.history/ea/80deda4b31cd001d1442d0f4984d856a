package quiz;

public class QuizEx01 {

	public static void main(String[] args) {
		int pay = 567890;
		
		int a = pay / 10000;
		pay %= 10000;
		int b = pay / 1000;
		pay %= 1000;
		int c = pay / 100;
		pay %= 100;
		int d = pay / 10;
		pay %= 10;
		
		System.out.println("만원 : "+a+"장");
		System.out.println("천원 : "+b+"장");
		System.out.println("백원 : "+c+"장");
		System.out.println("십원 : "+d+"장");
		
	}
}

