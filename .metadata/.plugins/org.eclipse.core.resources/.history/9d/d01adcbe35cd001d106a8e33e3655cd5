package quiz;

public class QuizEx01 {

	public static void main(String[] args) {
		
		//1. 변수선언
		//2. 메세지 출력 및 입력받기
		//3. 처리(계산)
		
		int pay = 567890;
		
		int a = pay / 10000;
		pay = pay % 10000;
		int b = pay / 1000;
		pay = pay % 1000;
		int c = pay / 100;
		pay = pay % 100;
		int d = pay / 10;
		pay = pay % 10;
		
		System.out.println("만원 : "+a+"장");
		System.out.println("천원 : "+b+"장");
		System.out.println("백원 : "+c+"개");
		System.out.println("십원 : "+d+"개");
		
	}
}
